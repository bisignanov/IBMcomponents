{
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish [skip ci]"
    }
  },
  "useWorkspaces": true,
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/docs/**",
    "**/e2e/**",
    "**/examples/**",
    "**/*.md"
  ]
}
