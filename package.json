{
  "name": "ibm-cloud-paks",
  "private": true,
  "version": "0.0.0",
  "repository": "git@github.com:carbon-design-system/ibm-cloud-paks.git",
  "license": "Apache-2.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "scripts": {
    "build": "lerna run build --stream --prefix --npm-client yarn",
    "build:storybook": "cd packages/core && yarn build:storybook",
    "ci-check": "yarn format:diff && yarn lint && yarn test --ci",
    "clean": "lerna run clean && lerna clean --yes && rimraf node_modules",
    "format": "prettier --write '**/*.{js,md,mdx,scss,ts}' '!**/{build,es,lib,storybook,ts,umd}/**'",
    "format:diff": "prettier --list-different '**/*.{js,md,mdx,scss,ts}' '!**/{build,es,lib,storybook,ts,umd}/**'",
    "lint": "yarn lint:es && yarn lint:style",
    "lint:es": "eslint 'packages/**/*.js'",
    "lint:style": "stylelint packages/**/*.scss --report-needless-disables --report-invalid-scope-disables",
    "test": "jest",
    "storybook": "cd packages/core && yarn start",
    "sync": "carbon-cli sync"
  },
  "peerDependencies": {
    "react": "^16.13.1"
  },
  "devDependencies": {
    "@carbon/bundler": "^10.9.0",
    "@carbon/rollup-config": "^0.0.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "copyfiles": "^2.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.4",
    "eslint": "^7.8.1",
    "eslint-config-carbon": "^2.1.0",
    "eslint-plugin-react": "7.20.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.10",
    "prettier": "^2.0.5",
    "prettier-config-carbon": "^0.4.0",
    "react": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.28.2",
    "stylelint": "^13.6.1",
    "stylelint-carbon-use": "git+https://git@github.com/lee-chase/carbon-use.git",
    "stylelint-config-carbon": "^1.1.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "carbon"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        72
      ],
      "body-max-line-length": [
        2,
        "always",
        80
      ],
      "scope-case": [
        0,
        "always",
        "lower-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "test"
        ]
      ]
    }
  },
  "lint-staged": {
    "**/*.{js,md,mdx,scss}": "yarn format",
    "**/*.scss": "yarn lint:style"
  }
}
