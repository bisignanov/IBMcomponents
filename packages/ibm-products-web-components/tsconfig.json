{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es2017", "esnext.array", "dom", "dom.iterable"],
    "typeRoots": [
      "src/typings",
      "tests/typings",
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "declaration": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "stripInternal": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx"
  ],
  "exclude": ["src/**/*.stories.ts", "src/globals/internal/storybook-cdn.ts"]
}
